{
  "$schema": "https://k2p5.dev/cortex-config.json",
  "version": "1.0.0",
  "worktree": {
    "root": "../.worktrees",
    "autoCleanup": false
  },
  "branches": {
    "protected": [
      "main",
      "master",
      "develop"
    ],
    "defaultType": "feature"
  },
  "plans": {
    "namingPattern": "{date}-{type}-{slug}",
    "includeMermaid": true
  },
  "sessions": {
    "retention": 30,
    "includeDecisions": true
  }
}