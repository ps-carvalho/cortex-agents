{
  "version": "1.0.0",
  "worktree": {
    "root": "../.worktrees",
    "autoCleanup": false
  },
  "branches": {
    "protected": ["main", "master", "develop", "staging", "production"],
    "defaultType": "feature",
    "namingPattern": "{type}/{name}"
  },
  "plans": {
    "namingPattern": "{date}-{type}-{slug}",
    "includeMermaid": true,
    "defaultStatus": "draft"
  },
  "sessions": {
    "retention": 30,
    "includeDecisions": true,
    "includeFilesChanged": true
  }
}
